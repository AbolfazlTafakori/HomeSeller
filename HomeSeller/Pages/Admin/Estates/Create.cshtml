@page
@model HomeSeller.Pages.Admin.Estates.CreateModel
@{
}
<div class="row mt-5">
    <div class="col-lg-3 col-md-3 col-12">
        <div class="text-right">
            <div class="list-group p-0 mb-5">
                <a href="#" class="active list-group-item list-group-item-action">
                    ایجاد ملک
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-9 col-md-9 col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center font-weight-bold m-auto"> مدیریت املاک </h4>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <label class="my-2 h6"> عنوان </label>
                            <input asp-for="EstateViewModel.Estates.Title" class="form-control">
                            <span asp-validation-for="EstateViewModel.Estates.Title"></span>
                            <label class="my-2 h6"> متراژ </label>
                            <input asp-for="EstateViewModel.Estates.Metrage" class="form-control">
                            <span asp-validation-for="EstateViewModel.Estates.Metrage"></span>
                            <label class="my-2 h6"> آدرس </label>
                            <input asp-for="EstateViewModel.Estates.Address" class="form-control">
                            <span asp-validation-for="EstateViewModel.Estates.Address"></span>
                            <label class="my-2 h6"> توضیحات </label>
                            <textarea asp-for="EstateViewModel.Estates.Description" class="form-control"></textarea>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <label class="my-2 h6"> نوع </label>
                            <select class="form-control" asp-for="EstateViewModel.SelectedCategory" asp-items="Model.EstateViewModel.CategoryOption"></select>
                            <span asp-validation-for="EstateViewModel.SelectedCategory"></span>
                            <label class="my-2 h6"> مبلغ </label>
                            <input asp-for="EstateViewModel.Estates.price" class="form-control">
                            <span asp-validation-for="EstateViewModel.Estates.price"></span>
                            <label class="my-2 h6"> عکس </label>
                            <div class="custom-file my-1">
                                <h6 class="custom-file-label text-center"> عکس محصول </h6>
                                <input asp-for="EstateViewModel.ImgUp" id="ImgUp" class="custom-file-input" type="file">
                            </div>
                            <img src="" width="150px" height="150px" class="d-block mx-auto">
                        </div>
                    </div>
                    <div class="row my-3">
                        <div class="col-lg-6 col-md-6 col-12">
                            <button type="submit" class="btn btn-success btn-block"> تایید </button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <a asp-page="Index" class="btn btn-secondary btn-block"> بازگشت </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function readUrl(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgPreview')attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#ImgUp").change(function (){
            readURL(this);
        });
    </script>
}
    
